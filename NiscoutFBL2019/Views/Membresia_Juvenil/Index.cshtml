@model IEnumerable<NiscoutFBL2019.Models.Membresia_Juvenil>

@{
    ViewBag.Title = "Index";
}
<div class="card-header card-header-tabs" style="box-shadow: 0 0 1px 0 ; background-color: transparent">
    <h3 style="font-family:'Times New Roman'"><strong> @Model.Count() Registros de Membresías </strong>  </h3>
    <h4 style="font-family:'Times New Roman'"> @Model.Count(x => x.Juvenil.Sexo == "Femenino") Mujeres | @Model.Count(x => x.Juvenil.Sexo == "Masculino")  Hombres</h4>
</div>

<div align="left">

    @using (Html.BeginForm("Index", "Membresia_Juvenil", FormMethod.Get))
            {
        <div align="right">
            <br />

            @Html.TextBox("buscar")
            <input type="image" src="@Url.Content("~/Content/Ico/lupa.png")" width="20" class="btn waves-effect waves-light btn-outline-info">

            <a href="@Url.Action("Create", "Personas")" class="btn waves-effect waves-light btn-outline-info hidden-md-down" title="Registrar un Miembro">
                Nuevo <img width="25" src="@Url.Content("~/Content/Ico/Nuevo.png")" />
            </a>
            <a href="@Url.Action("RepAdulto", "Membresia_Juvenil")" target="_blank" class="btn waves-effect waves-light btn-outline-success hidden-md-down" title="Imprimir Registros">
                <img width="25" src="@Url.Content("~/Content/Ico/imprimir.png")" />
            </a>

            <hr />
        </div>
    }
</div>


<div class="col-lg-12 " style="box-shadow: 0px 1px 3px mediumpurple">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table vm no-th-brd no-wrap pro-of-month">
                   
                        <thead style="color: #000">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Juvenil.Nombres)
                                </th>

                                <th>
                                    Nombre SubGrupo
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Etapa_Aprobacion.Estado)
                                </th>
                                <th>
                                    Centro Estudio
                    
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Turno)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Grado)
                            </th>
                            <th>
                               Nivel Académico
                            </th>
                            <th>
                               Año
                            </th>
                            <th></th>
                        </tr>
                    </thead>

          @if (Model.Count() == 0)
            {
            <tr>
                <td>
                    <div colspan="4" style="font-family:'Times New Roman'; color:purple; font-size:18px">
                        <br /> No se ha encontrado ningún dato relacionado
                        <a href="@Url.Action("Index")" class="btn waves-effect " title="Volver">
                            <img width="30" src="@Url.Content("~/Content/Ico/Volver.png")" />
                        </a>
                    </div>
                </td>
            </tr>
          }
          else
          {
              foreach (var item in Model)
              {
                            <tbody>
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Juvenil.Nombres)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.SubGrupo.Cod_Subgrupo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Etapa_Aprobacion.Estado)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Centro_Estudio.Nombre_Centro)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Turno)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Grado)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nivel_Academico)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Annio)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", "Membresia_Juvenil",new { id = item.Id })" class="btn waves-effect waves-light btn-outline-primary hidden-md-down" title="Editar Registro">
                                            <img width="25" src="~/Content/Ico/Editar.png" />
                                        </a>
                                        <a href="@Url.Action("Details", "Membresia_Juvenil",new { id = item.Id })" class="btn waves-effect waves-light btn-outline-info hidden-md-down" title="Información">
                                            <img width="25" src="~/Content/Ico/Ver_detalles.png" />
                                        </a>
                                        @*<a href="@Url.Action("Delete", "Membresia_Juvenil",new { id = item.Id })" class="btn waves-effect waves-light btn-outline-danger  hidden-md-down" title="Eliminar Registro">
                                                <img width="25" src="~/Content/Ico/eliminar.png" />
                                            </a>*@

                                        <a href="@Url.Action("ReporCarnet", "Reportes", new { id = item.Id })" target="_blank" class="btn waves-effect waves-light btn-outline-success hidden-md-down" title="Imprimir Carnet">
                                            <img width="25" src="@Url.Content("~/Content/Ico/imprimir.png")" />
                                        </a>

                                    </td>
                                </tr>
                            </tbody>
                        }
                    }
                </table>
            </div>
        </div>
    </div>
</div>
