@model NiscoutFBL2019.Models.Patrocinador

@{
    ViewBag.Title = "Details";
}

<style>
    .login100-form-title {
        font-weight: bold;
        font-family: Poppins-Bold;
        font-size: 30px;
        color: #333333;
        line-height: 1.2;
        text-align: center;
        width: 100%;
    }

    .input100 {
        border: none;
        font-family: Poppins-Medium;
        font-size: 20px;
        line-height: 1.5;
        color: #333333;
        display: block;
        width: 100%;
        background: #e6e6e6;
        height: 45px;
        border-radius: 15px;
        padding: 0 20px 0 53px;
    }


    .form-group {
        position: relative;
        width: 95%;
        z-index: 1;
        margin-bottom: 10px;
    }

    .control-label {
        font-weight: bold;
        color: #333333;
        font-size: 18px;
    }
</style>
<div class="card-header card-header-tabs" style="box-shadow: 0 0 5px 0 mediumpurple; background-color: transparent">
    <span align="center" class="login100-form-title">
        Información de Patrocinador...
    </span>
</div>
<hr />
<div class="col-lg-12 " style="box-shadow: 0px 1px 3px mediumpurple">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table vm no-th-brd no-wrap pro-of-month">
                    <thead>
                        <tr>
                            <td>
                                Código patrocinador:
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Cod_Persona)
                            </td>
                        </tr>
                        <tr>
                            <td>
                              Nombres:
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Nombres)
                            </td>
                        </tr>
                        <tr>
                            <td>
                               Apellidos:
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Apellidos)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Nacimiento:
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Fecha_Nac)
                            </td>
                        </tr>

                        <tr>
                            <td>
                                # Cédula:
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Cedula)
                            </td>
                        </tr>
                        <tr>
                            <td>
                               Sexo:
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Sexo)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Estado Civil:
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Estado_Civil)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                # Pasaporte:
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Num_Pasaporte)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                # Teléfono:
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Telefono)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Dirección:
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Direccion)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Profesión:
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Profesion)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Centro Laboral:
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Centro_Laboral)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Tipo de Sangre:
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Tipo_Sangre)
                            </td>
                        </tr>

                        <tr>
                            <td>
                                Nombre Institución:
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Nombre_Insti)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Representante:
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Nombre_Representante)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Área laboral:
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Trabajo)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Correo:
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.E_Mail)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Departamento:
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Departamento.Nombre_Departamento)
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                        </tr>
                    </thead>
                </table>
                <p>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">

                            <button class="btn waves-effect waves-purple btn-success hidden-md-down">@Html.ActionLink("Editar Registro", "Edit", new { id = Model.Id })</button>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <a href="@Url.Action("Index")" class="btn waves-effect waves-purple btn btn-outline-danger hidden-md-down" title="Cancelar Registro">
                                <img width="30" src="@Url.Content("~/Content/Ico/cancelar.png")" />
                            </a>
                        </div>
                    </div>
                </p>
            </div>
        </div>
    </div>
</div>
