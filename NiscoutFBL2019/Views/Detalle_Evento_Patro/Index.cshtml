@model IEnumerable<NiscoutFBL2019.Models.Detalle_Evento_Patro>

@{
    ViewBag.Title = "Index";
}

<h2>Registros de Detalle Evento Patrocinador</h2>
<div align="left">
    @using (Html.BeginForm("Index", "Detalle_Evento_Patro", FormMethod.Get))
    {
        <div align="right">
            <hr />
            <a href="@Url.Action("Create", "Detalle_Evento_Patro")" class="btn waves-effect waves-light btn-outline-info hidden-md-down"> Registrar Detalle Evento Patrocinador</a>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;

            @Html.TextBox("searching")
            &nbsp; &nbsp; &nbsp;
            <input type="submit" value="Buscar" class="btn btn-outline-success" />
            <hr />
        </div>
    }
</div>

<div class="datagr">
    <table>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Asistente_Evento.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Evento.Cod_Evento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Local_Evento.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patrocinador.Cod_Persona)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Desde)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Hasta)
                </th>
                <th></th>
            </tr>
            </thead>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="4"> No se ha encontrado ningún dato relacionado</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                <tr class="alt">
                    <td>
                        @Html.DisplayFor(modelItem => item.Asistente_Evento.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Evento.Cod_Evento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Local_Evento.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Patrocinador.Cod_Persona)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Desde)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hasta)
                    </td>
                    <td>
                        <button class="btn waves-effect waves-purple btn-success hidden-md-down">@Html.ActionLink("Editar", "Edit", new { id = item.Id })</button>
                        <button class="btn waves-effect waves-red btn-info hidden-md-down">@Html.ActionLink("Detalles", "Details", new { id = item.Id })</button>
                        <button class="btn waves-effect waves-light btn-danger hidden-md-down">@Html.ActionLink("Eliminar", "Delete", new { id = item.Id })</button>
                    </td>
                </tr>
                }
            }

    </table>
    </div>