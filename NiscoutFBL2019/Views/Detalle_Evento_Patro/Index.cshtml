@model IEnumerable<NiscoutFBL2019.Models.Detalle_Evento_Patro>

@{
    ViewBag.Title = "Index";
}

<style>
    .login100-form-title {
        font-weight: bold;
        font-family: Poppins-Bold;
        font-size: 30px;
        color: #333333;
        line-height: 1.2;
        text-align: center;
        width: 100%;
    }

    .input100 {
        border: none;
        font-family: Poppins-Medium;
        font-size: 20px;
        line-height: 1.5;
        color: #333333;
        display: block;
        width: 100%;
        background: #e6e6e6;
        height: 45px;
        border-radius: 15px;
        padding: 0 20px 0 53px;
    }


    .form-group {
        position: relative;
        width: 95%;
        z-index: 1;
        margin-bottom: 10px;
    }

    .control-label {
        font-weight: bold;
        color: #333333;
        font-size: 18px;
    }
</style>
<div class="card-header card-header-tabs" style="box-shadow: 0 0 1px 0 ; background-color: transparent">
    <h3 style="font-family:'Montserrat'"><strong> @Model.Count() Registros Detalle de Evento Patrocinador  </strong>  </h3>

</div>
<br />


<div align="left">
    @using (Html.BeginForm("Index", "Detalle_Evento_Patro", FormMethod.Get))
    {
        <div align="right">
            <div>
              

                @Html.TextBox("searching")
                <input type="image" src="@Url.Content("~/Content/Ico/lupa.png")" width="20" class="btn waves-effect waves-light btn-outline-info" title="Buscar Registro">

                <a href="@Url.Action("Create", "Detalle_Evento_Patro")" class="btn waves-effect waves-light btn-outline-info hidden-md-down" title="Registrar Detalle Evento">
                    Nuevo <img width="25" src="@Url.Content("~/Content/Ico/Nuevo.png")" />
                </a>
                @*<a href="@Url.Action("RepAdulto", "Adultoes")" class="btn waves-effect waves-light btn-outline-success hidden-md-down" title="Imprimir Registros">
                        <img width="25" src="@Url.Content("~/Content/Ico/imprimir.png")" />
                    </a>*@

                <hr />
            </div>
        </div>

    }
</div>

<div class="col-lg-12 " style="box-shadow: 0px 1px 3px mediumpurple">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table vm no-th-brd no-wrap pro-of-month">
                    <thead style="color: #000">
                        <tr>
                            <th>
                                Hora 
                            </th>
                              <th>
                                Nombre Evento 
                            </th>
                            <th>
                                Nombre Local 
                            </th>
                            <th>
                                Nombre Patrocinador 
                            </th>
                            <th>
                                Desde 
                            </th>
                            <th>
                                Hasta 
                            </th>
                           
                            <th></th>
                        </tr>
                    </thead>
                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td>
                                <div colspan="4" style="font-family:'Times New Roman'; color:purple; font-size:18px">
                                    <br /> No se ha encontrado ningún dato relacionado
                                    <a href="@Url.Action("Index")" class="btn waves-effect " title="Volver">
                                        <img width="30" src="@Url.Content("~/Content/Ico/Volver.png")" />
                                    </a>

                                </div>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Asistente_Evento.Hora_Llegada)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Evento.Nombre_Evento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Local_Evento.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Patrocinador.Nombres)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Desde)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Hasta)
                                </td>
                              

                                <td>
                                    <a href="@Url.Action("Edit", "Detalle_Evento_Patro",new { id = item.Id })" class="btn waves-effect waves-light btn-outline-primary hidden-md-down" title="Editar Registro">
                                        <img width="25" src="~/Content/Ico/Editar.png" />
                                    </a>
                                    <a href="@Url.Action("Details", "Detalle_Evento_Patro",new { id = item.Id })" target="_blank" class="btn waves-effect waves-light btn-outline-info hidden-md-down" title="Información">
                                        <img width="25" src="~/Content/Ico/Ver_detalles.png" />
                                    </a>
                                    @*<a href="@Url.Action("Delete", "Detalle_Evento_Patro",new { id = item.Id })" class="btn waves-effect waves-light btn-outline-danger  hidden-md-down" title="Eliminar Registro">
                                            <img width="25" src="~/Content/Ico/eliminar.png" />
                                        </a>*@
                                </td>
                            </tr>
                        }
                    }
                    </table>
            </div>
        </div>
    </div>
</div>