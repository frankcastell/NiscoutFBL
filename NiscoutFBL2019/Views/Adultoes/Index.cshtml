@model IEnumerable<NiscoutFBL2019.Models.Adulto>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Miembros Adultos</h2>

<p>
   
    <a href="@Url.Action("Create", "Adultoes")" class="btn waves-effect waves-light btn-outline-info hidden-md-down"> Registrar Adulto</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Departamento.Cod_Departamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cod_Persona)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellidos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_Nac)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.E_Mail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cedula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sexo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado_Civil)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Num_Pasaporte)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Direccion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Departamento.Cod_Departamento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cod_Persona)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellidos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha_Nac)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.E_Mail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cedula)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sexo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado_Civil)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Num_Pasaporte)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Direccion)
        </td>
        <td>
            <button class="btn waves-effect waves-light btn-outline-info hidden-md-down">@Html.ActionLink("Editar", "Edit", new { id = item.Id })</button>
            <button class="btn waves-effect waves-light btn-outline-light hidden-md-down">@Html.ActionLink("Details", "Details", new { id = item.Id })</button>
            <button class="btn waves-effect waves-light btn-outline-danger hidden-md-down">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</button>

        </td>
    </tr>
}

</table>
