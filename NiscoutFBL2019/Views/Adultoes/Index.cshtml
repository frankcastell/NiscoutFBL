@model IEnumerable<NiscoutFBL2019.Models.Adulto>

@{
    ViewBag.Title = "Index";
}

@Styles.Render("Content","Slide_Catal","css")
@Styles.Render("Content","css")
<h2>Registros de Adultos</h2>

<div align="left">
    @using (Html.BeginForm("Index", "Adultoes", FormMethod.Get))
    {
        <div align="right">
                   <hr />
          
           
            @Html.TextBox("buscar")
            &nbsp; &nbsp;
             <input type="image"  src="@Url.Content("~/Content/Ico/lupa.png") " width="20" class="btn waves-effect waves-light btn-outline-info " >
            <a href="@Url.Action("Create", "Adultoes")" class="btn waves-effect waves-light btn-outline-info hidden-md-down">
                Nuevo <img width="25" src="@Url.Content("~/Content/Ico/Nuevo.png")" />
            </a>

            <a href="@Url.Action("RepAdulto", "Adultoes")" class="btn waves-effect waves-light btn-outline-info hidden-md-down">  <img width="25" src="@Url.Content("~/Content/Ico/imprimir.png")" /></a>

                <hr />
               </div>
           
    }
</div>


<div class="datagrid">
    <table class="table vm no-th-brd no-wrap pro-of-month">
    <thead>
        <tr>          
            <th>
                Código
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha_Nac)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.E_Mail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado_Civil)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Num_Pasaporte)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Departamento.Cod_Departamento)*@
                Nombre de Depto
            </th>
            <th></th>
        </tr>
    </thead>
          @if (Model.Count() == 0)
          {
    <tr>
        <td colspan="4"> No se ha encontrado ningún dato relacionado</td>
    </tr>
          }
          else
          {
              foreach (var item in Model)
              {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cod_Persona)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha_Nac)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.E_Mail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cedula)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sexo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado_Civil)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Num_Pasaporte)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Departamento.Nombre_Departamento)
                </td>
                <td>
                    <button class="btn waves-effect waves-purple btn-success hidden-md-down">@Html.ActionLink("Editar", "Edit", new { id = item.Id })</button>
                    <button class="btn waves-effect waves-red btn-info hidden-md-down">@Html.ActionLink("Detalle", "Details", new { id = item.Id })</button>
                    <button class="btn waves-effect waves-light btn-danger hidden-md-down">@Html.ActionLink("Eliminar", "Delete", new { id = item.Id })</button>
                    <button class="btn waves-effect waves-light btn-danger hidden-md-down">@Html.ActionLink("Renovar", "Renovar", new { id = item.Id })</button>

                </td>
            </tr>
            </tbody>
              }
          }
    </table>
    </div>
