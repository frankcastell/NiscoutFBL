<div class="datagrid">
    <table class="table vm no-th-brd no-wrap pro-of-month">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Cod_Persona)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombres)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apellidos)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha_Nac)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.E_Mail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cedula)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sexo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado_Civil)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Num_Pasaporte)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Direccion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Departamento.Cod_Departamento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Centro_Estudio.Cod_Centro)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tutoria.Parentezco)
                </th>
                <th></th>
            </tr>
        </thead>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4"> No se ha encontrado ningún dato relacionado</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cod_Persona)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombres)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Apellidos)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fecha_Nac)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.E_Mail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cedula)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sexo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Estado_Civil)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Num_Pasaporte)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefono)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Direccion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Departamento.Cod_Departamento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Centro_Estudio.Cod_Centro)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tutoria.Parentezco)
                        </td>
                        <td>
                            <button class="btn waves-effect waves-purple btn-success hidden-md-down">@Html.ActionLink("Editar", "Edit", new { id = item.Id })</button>
                            <button class="btn waves-effect waves-red btn-info hidden-md-down">@Html.ActionLink("Detalle", "Details", new { id = item.Id })</button>
                            <button class="btn waves-effect waves-light btn-danger hidden-md-down">@Html.ActionLink("Eliminar", "Delete", new { id = item.Id })</button>
                            <button class="btn waves-effect waves-light btn-danger hidden-md-down">@Html.ActionLink("Renovar", "Renovar", new { id = item.Id })</button>

                        </td>
                    </tr>
                </tbody>
            }
        }
    </table>
</div>
