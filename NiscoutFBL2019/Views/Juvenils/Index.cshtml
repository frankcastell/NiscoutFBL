@model IEnumerable<NiscoutFBL2019.Models.Juvenil>

@{
    ViewBag.Title = "Index";
}

<h2>Registros Juveniles</h2>

<p>
    <a href="@Url.Action("Create", "Juvenils")" class="btn waves-effect waves-light btn-outline-info hidden-md-down"> Agregar Juveniles</a>
</p>
<div class="datagr">
    <table>
        <thead>
            <tr>
                <th>
                   Centro de estudio
                </th>
                <th></th>
            </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr class="alt">
                    <td>
                        @Html.DisplayFor(modelItem => item.Centro_Estudio.Nombre_Centro)
                    </td>
                    <td>
                        <button class="btn waves-effect waves-purple btn-success hidden-md-down">@Html.ActionLink("Editar", "Edit", new { id = item.Id })</button>
                        <button class="btn waves-effect waves-red btn-info hidden-md-down">@Html.ActionLink("Detalles", "Details", new { id = item.Id })</button>
                        <button class="btn waves-effect waves-light btn-danger hidden-md-down">@Html.ActionLink("Eliminar", "Delete", new { id = item.Id })</button>
                    </td>
                </tr>
            }

    </table>
    </div>
