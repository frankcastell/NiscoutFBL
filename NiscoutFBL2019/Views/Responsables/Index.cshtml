@model IEnumerable<NiscoutFBL2019.Models.Responsable>

@{
    ViewBag.Title = "Index";
}
<h2>Registros de responsables</h2>
<link href="~/Content/css/ButtonStyles.css" rel="stylesheet" />
<p>
    <a href= "@Url.Action("Create", "Responsables")" class="btn waves-effect waves-light btn-outline-info hidden-md-down"> Registrar Responsable</a>
</p>

    <div class="datagrid">
        <table class="table vm no-th-brd no-wrap pro-of-month">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Departamento.Nombre_Departamento)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cod_Persona)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombres)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Apellidos)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Fecha_Nac)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.E_Mail)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cedula)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sexo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Estado_Civil)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Num_Pasaporte)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Telefono)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Direccion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Periodo)
                    </th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr class="alt">
                        <td>
                            @Html.DisplayFor(modelItem => item.Departamento.Nombre_Departamento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cod_Persona)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombres)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Apellidos)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fecha_Nac)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.E_Mail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cedula)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sexo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Estado_Civil)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Num_Pasaporte)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefono)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Direccion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Periodo)
                        </td>
                        <td>
                            <button class="btn waves-effect waves-purple btn-success hidden-md-down">@Html.ActionLink("Editar", "Edit", new { id = item.Id })</button>
                            <button class="btn waves-effect waves-red btn-info hidden-md-down">@Html.ActionLink("Detalle", "Details", new { id = item.Id })</button>
                            <button class="btn waves-effect waves-light btn-danger hidden-md-down">@Html.ActionLink("Eliminar", "Delete", new { id = item.Id })</button>

                        </td>
                    </tr>
                </tbody>
            }

        </table>
    </div>
