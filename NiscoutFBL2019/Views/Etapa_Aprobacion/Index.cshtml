@model IEnumerable<NiscoutFBL2019.Models.Etapa_Aprobacion>

@{
    ViewBag.Title = "Index";
}

<h2>Etapa Aprobacion</h2>

<p>
    <a href="@Url.Action("Create", "Etapa_Aprobacion")" class="btn waves-effect waves-light btn-outline-info hidden-md-down"> Agregar Etapa Aprobacion</a>
</p>

<div class="datagr">
    <table>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Cod_Etapa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th></th>
            </tr>
            </thead>
           @foreach (var item in Model)
            {
                <tr class="alt">
                    <td>
                        @Html.DisplayFor(modelItem => item.Cod_Etapa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        <button class="btn waves-effect waves-purple btn-success hidden-md-down">@Html.ActionLink("Editar", "Edit", new { id = item.Id })</button>
                        <button class="btn waves-effect waves-red btn-info hidden-md-down">@Html.ActionLink("Detalles", "Details", new { id = item.Id })</button>
                        <button class="btn waves-effect waves-light btn-danger hidden-md-down">@Html.ActionLink("Eliminar", "Delete", new { id = item.Id })</button>
                    </td>
                </tr>
            }

    </table>
    </div>
