@model IEnumerable<NiscoutFBL2019.Models.SubGrupo>

@{
    ViewBag.Title = "Index";
}

<h2>Registro de SubGrupos</h2>

<link href="~/Content/css/ButtonStyles.css" rel="stylesheet" />
<div align="left">
    @using (Html.BeginForm("Index", "SubGrupoes", FormMethod.Get))
    {
        <div align="right">
            <hr />
            <a href="@Url.Action("Create", "SubGrupoes")" class="btn waves-effect waves-light btn-outline-info hidden-md-down"> Agregar Nuevo SubGrupo</a>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
           
            @Html.TextBox("buscar")
            &nbsp;&nbsp;&nbsp;
            <input type="submit" value="Buscar" class="btn btn-outline-success" />
            <hr />
        </div>
    }
</div>

<div class="datagrid">
    <table class="table vm no-th-brd no-wrap pro-of-month">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Cod_Subgrupo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre_Subgrupo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Asistente.Cod_Persona)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tipo_Grupo.Cod_Tipo_Grupo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Grupo.Cod_Grupo)
                </th>
                <th></th>
            </tr>
        </thead>
        @if (Model.Count() == 0)
        {
        <tr>
            <td colspan="8"> No se ha encontrado ningún dato relacionado</td>
        </tr>
        }
        else
        {
            foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cod_Subgrupo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre_Subgrupo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Asistente.Cod_Persona)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo_Grupo.Cod_Tipo_Grupo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grupo.Cod_Grupo)
                </td>
                <td>
                    <button class="btn waves-effect waves-purple btn-success hidden-md-down">@Html.ActionLink("Editar", "Edit", new { id = item.Id })</button>
                    <button class="btn waves-effect waves-red btn-info hidden-md-down">@Html.ActionLink("Detalle", "Details", new { id = item.Id })</button>
                    <button class="btn waves-effect waves-light btn-danger hidden-md-down">@Html.ActionLink("Eliminar", "Delete", new { id = item.Id })</button>
                </td>
            </tr>
            }
        }

    </table>
</div>