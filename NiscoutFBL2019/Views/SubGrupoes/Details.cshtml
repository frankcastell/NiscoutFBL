@model NiscoutFBL2019.Models.SubGrupo

@{
    ViewBag.Title = "Details";
}
<style>
    .login100-form-title {
        font-weight: bold;
        font-family: Poppins-Bold;
        font-size: 30px;
        color: #333333;
        line-height: 1.2;
        text-align: center;
        width: 100%;
    }

    .input100 {
        border: none;
        font-family: Poppins-Medium;
        font-size: 20px;
        line-height: 1.5;
        color: #333333;
        display: block;
        width: 100%;
        background: #e6e6e6;
        height: 45px;
        border-radius: 15px;
        padding: 0 20px 0 53px;
    }


    .form-group {
        position: relative;
        width: 95%;
        z-index: 1;
        margin-bottom: 10px;
    }

    .control-label {
        font-weight: bold;
        color: #333333;
        font-size: 18px;
    }
</style>
<div class="card-header card-header-tabs" style="box-shadow: 0 0 1px 0 ; background-color: transparent">
    <h2 style="font-family:'Montserrat'"><strong> Información de Unidades... </strong>  </h2>

</div>
<br />

<div class="col-lg-12 " style="box-shadow: 0px 1px 3px mediumpurple">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table vm no-th-brd no-wrap pro-of-month">
                    <thead style="color: #000">
                        <tr>
                            <td>
                                Código
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Cod_Subgrupo)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Nombre Unidad
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Nombre_Subgrupo)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Descripción
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Descripcion)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Asistente
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Asistente.Nombres)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Tipo de Grupo
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Tipo_Grupo.Nombre_Tipo_Grupo)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Grupo
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Grupo.Nombre_Grupo)
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                        </tr>
                    </thead>
                </table>
                <p>
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    <button class="btn waves-effect waves-purple btn-success hidden-md-down">@Html.ActionLink("Editar Registro", "Edit", new { id = Model.Id })</button>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <button class="btn waves-effect waves-purple btn-info hidden-md-down">@Html.ActionLink("Volver a la lista", "Index")</button>
                </p>
            </div>
        </div>
    </div>
</div>

<br />
<br />
<div class="row">
    <div class="col-lg-12 " style="box-shadow: 0px 1px 3px mediumpurple">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <h4 class="card-title" style="text-align:center; background-color:lightcyan"><strong>Lista de Adultos</strong> </h4>
                    <table class="table vm no-th-brd no-wrap pro-of-month">
                        <thead style="color: #000">

                            <tr>
                                <th>#</th>
                                <th>Nombre Completo</th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.Membresia_Adultos)
                            {

                                <tr>
                                    <td> @item.Id  </td>
                                    <td>
                                        <a class="link" href="@Url.Action("Details","Adultoes", new { id=item.AdultoId })">
                                            @item.Adulto.Nombres @item.Adulto.Apellidos
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>

<br />
<br />

     <div class="col-lg-12 " style="box-shadow: 0px 1px 3px mediumpurple;  float: right;">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <h4 class="card-title" style="text-align:center; background-color:lightcyan"><strong>Lista de Jóvenes</strong> </h4>
                    <table class="table vm no-th-brd no-wrap pro-of-month">
                        <thead style="color: #000">
                            <tr>
                                <th>#</th>
                                <th>Nombre Completo</th>

                            </tr>
                        </thead>
                        @foreach (var item in Model.Membresia_Juveniles)
                        {

                            <tr>
                                <td> @item.Id  </td>
                                <td>
                                    <a class="link" href="@Url.Action("Details","Juvenils", new { id=item.JuvenilId })">
                                        @item.Juvenil.Nombres @item.Juvenil.Apellidos
                                    </a>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

                  