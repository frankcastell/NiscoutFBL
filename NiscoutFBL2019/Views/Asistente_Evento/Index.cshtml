@model IEnumerable<NiscoutFBL2019.Models.Asistente_Evento>

@{
    ViewBag.Title = "Index";
}

<h2>Registros de Asistente de Evento</h2>
<link href="~/Content/css/ButtonStyles.css" rel="stylesheet" />

<div align="left">
    @using (Html.BeginForm("Index", "Asistente_Evento", FormMethod.Get))
    {
        
        <div align="right">

            <div>
                <hr />

                @Html.TextBox("busqueda")
                <input type="image" src="@Url.Content("~/Content/Ico/lupa.png")" width="20" class="btn waves-effect waves-light btn-outline-info" title="Buscar Registro">

                <a href="@Url.Action("Create", "Asistente_Evento")" class="btn waves-effect waves-light btn-outline-info hidden-md-down" title="Registrar nuevo asistente">
                    Nuevo <img width="25" src="@Url.Content("~/Content/Ico/Nuevo.png")" />
                </a>
                @*<a href="@Url.Action("Create", "Asistente_Evento")" class="btn waves-effect waves-light btn-outline-success hidden-md-down" title="Imprimir Registros">
                    <img width="25" src="@Url.Content("~/Content/Ico/imprimir.png")" />
                </a>*@
                <hr />
            </div>
        </div>
    }
</div>

 <div class="datagr">
    <table>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Hora_Llegada)
                </th>
                <th></th>
            </tr>
        </thead>
     @if (Model.Count() == 0)
     {
    <tr>
        <td colspan="4"> No se ha encontrado ningún dato relacionado</td>
    </tr>
     }
     else
     {
         foreach (var item in Model)
         {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hora_Llegada)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Asistente_Evento",new { id = item.Id })" class="btn waves-effect waves-light btn-outline-primary hidden-md-down" title="Editar Registro">
                            <img width="25" src="~/Content/Ico/Editar.png" />
                        </a>
                        <a href="@Url.Action("Details", "Asistente_Evento",new { id = item.Id })" class="btn waves-effect waves-light btn-outline-info hidden-md-down" title="Información">
                            <img width="25" src="~/Content/Ico/Ver_detalles.png" />
                        </a>
                        <a href="@Url.Action("Delete", "Asistente_Evento",new { id = item.Id })" class="btn waves-effect waves-light btn-outline-danger  hidden-md-down" title="Eliminar Registro">
                            <img width="25" src="~/Content/Ico/eliminar.png" />
                        </a>

                    </td>
                </tr>
         }
     }
</table>
</div>

