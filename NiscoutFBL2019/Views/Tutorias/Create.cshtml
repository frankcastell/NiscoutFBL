@model NiscoutFBL2019.Models.Tutoria

@{
    ViewBag.Title = "Create";
    NiscoutFBL2019.Models.Persona PersonaId = ViewBag.PersonaId;
}

<h2>Registrar Nuevo Tutor</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="datagrid">

        <div class="form-horizontal">

            <br />        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.Parentezco, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Parentezco, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Parentezco, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PersonaId, "Persona", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="hidden" id="PersonaId" name="PersonaId" value="@PersonaId.Id" />
                    <label><strong> @PersonaId.Nombres @PersonaId.Apellidos</strong></label>
                </div>
            </div>

            <div align="right">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input src="@Url.Content("~/Content/Ico/guardar.png")" type="image" value="Guardar" width="25" class="btn waves-effect waves-light btn-outline-info" title="Guardar Registro" /> &nbsp;

                        <a href="@Url.Action("Index")" class="btn waves-effect waves-purple btn btn-outline-danger hidden-md-down" title="Cancelar Registro">
                            <img width="30" src="@Url.Content("~/Content/Ico/cancelar.png")" />
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

}


