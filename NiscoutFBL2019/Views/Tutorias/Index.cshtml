@model IEnumerable<NiscoutFBL2019.Models.Tutoria>

@{
    ViewBag.Title = "Index";
}
<h2>Registros de Tutores</h2>
<link href="~/Content/css/ButtonStyles.css" rel="stylesheet" />
<hr />
<p>
    <a href="@Url.Action("Create","Tutoria")" class="btn waves-effect waves-light btn-outline-info hidden-md-down">
        Agregar Nuevo Tutor
        <img width="25" src="@Url.Content("~/Content/Ico/Nuevo.png")" />
    </a>
</p>
<hr />
<div class="datagr">
    <table>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Parentezco)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Persona.Cod_Persona)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Parentezco)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Persona.Cod_Persona)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

    </table>
</div>
