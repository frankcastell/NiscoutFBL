@model IEnumerable<NiscoutFBL2019.Models.Persona>

@{
    ViewBag.Title = "Index";
}


<!-- /Segunda parte -->
<div class="card-header card-header-tabs" style="box-shadow: 0 0 1px 0 ; background-color: transparent">
    <h3 style="font-family:'Montserrat'"><strong> Listado de todos los miembros del sistema... </strong>  </h3>
    <h3 style="font-family:'Montserrat'"><strong> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Registros de Personal &nbsp; @Model.Count() </strong>  </h3>
    <h4 style="font-family:'Montserrat'">  Mujeres &nbsp; @Model.Count(x => x.Sexo == "Femenino") &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    |
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Hombres &nbsp; @Model.Count(x => x.Sexo == "Masculino")  </h4>

</div>
<link href="~/Content/css/ButtonStyles.css" rel="stylesheet" />

<div align="left">
    @using (Html.BeginForm("Index", "Personas", FormMethod.Get))
    {
        <div align="right">
            <hr />

            @Html.TextBox("buscar")
            <input type="image" src="@Url.Content("~/Content/Ico/lupa.png")" width="20" class="btn waves-effect waves-light btn-outline-info">

            <a href="@Url.Action("Create", "Personas")" class="btn waves-effect waves-light btn-outline-info hidden-md-down" title="Agregar Nuevo Personas">
                Nuevo <img width="25" src="@Url.Content("~/Content/Ico/Nuevo.png")" />
            </a>
            <a href="@Url.Action("ReporPersonas", "Reportes")" target="_blank" class="btn waves-effect waves-light btn-outline-success hidden-md-down" title="Imprimir Registros">
                <img width="25" src="@Url.Content("~/Content/Ico/imprimir.png")" />
            </a>
            <hr />
        </div>
    }
</div>

<div class="row">
    <!-- Column -->
    @if (Model.Count() == 0)
    {
        <div class="col-lg-12 " style="box-shadow: 0px 1px 3px mediumpurple">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">

                        <h2 colspan="4" style="font-family:'Times New Roman'; color:purple; font-size:18px">
                            <br /> No se ha encontrado ningún dato relacionado
                            <a href="@Url.Action("Index")" class="btn waves-effect " title="Volver">
                                <img width="30" src="@Url.Content("~/Content/Ico/Volver.png")" />
                            </a>
                        </h2>
                    </div>
                </div>
            </div>
        </div>

    }
    else
    {
        foreach (var item in Model.OrderBy(x => x.Apellidos))
        {
            <div class="col-lg-4 col-xlg-3 col-md-5">
                <div class="card">
                    <div class="card-body" style="border-radius: 20px;box-shadow: 0 0 5px 0 mediumpurple; background-color: transparent">
                        <center class="m-t-30">
                            <img src="~/Content/assets/images/Usuario icon.png" class="img-circle" width="150" />
                            <h4 class="card-title m-t-10">  @item.Apellidos, @item.Nombres </h4>
                            <h6 class="card-subtitle">@item.E_Mail</h6>
                            <div class="row text-center justify-content-md-center">

                                <div class="col-4"><a href="@Url.Action("Edit", "Personas",new { id = item.Id })" style="font-size:25px" class="link"><i class="icon-pencil" title="Editar Registro"></i> <font class="font-medium"></font></a></div>
                                <div class="col-4"><a href="@Url.Action("Details", "Personas",new { id = item.Id })" style="font-size:25px" class="link" target="_blank"><i class="icon-eye" title="Ver Registro"></i> <font class="font-medium"></font></a></div>
                                <div class="col-4"><a href="@Url.Action("", "Reportes",new { id = item.Id })" style="font-size:25px" class="link" title="Imprimir Carnet" target="_blank"><i class="fa  fa-address-card "></i> <font class="font-medium"></font></a></div>

                            </div>
                        </center>
                    </div>
                </div>
            </div>
        }
    }
</div>
