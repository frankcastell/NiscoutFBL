@model IEnumerable<NiscoutFBL2019.Models.Centro_Estudio>

@{
    ViewBag.Title = "Index";
}

<h2>Registro de Centro de Estudio</h2>
<div align="left">
    @using (Html.BeginForm("Index", "Centro_Estudio", FormMethod.Get))
    {
        <div align="right">
            <hr />
            <a href="@Url.Action("Create", "Centro_Estudio")" class="btn waves-effect waves-light btn-outline-info hidden-md-down"> Registrar Nuevo Centro de Estudio
                <img width="25" src="@Url.Content("~/Content/Ico/Nuevo.png")" /></a>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          

            @Html.TextBox("buscar")
            &nbsp;&nbsp;&nbsp;
            <div>
                <input type="submit" value="Buscar" class="btn btn-outline-success">
                <img width="25" src="~/Content/Ico/lupa.png" />
            </div>
            <hr />
        </div>
    }
</div>

<div class="datagrid">
    <table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cod_Centro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre_Centro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Turno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.E_Mail)
            </th>
            <th></th>
        </tr>
    </thead>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4"> No se ha encontrado ningún dato relacionado</td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tbody>
                <tr class="alt">
                    <td>
                        @Html.DisplayFor(modelItem => item.Cod_Centro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre_Centro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Turno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.E_Mail)
                    </td>
                    <td>

                        <button class="btn waves-effect waves-purple btn-success hidden-md-down">@Html.ActionLink("Editar", "Edit", new { id = item.Id })</button>
                        <button class="btn waves-effect waves-red btn-info hidden-md-down">@Html.ActionLink("Detalles", "Details", new { id = item.Id })</button>
                        <button class="btn waves-effect waves-light btn-danger hidden-md-down">@Html.ActionLink("Eliminar", "Delete", new { id = item.Id })</button>
                    </td>
                </tr>
                </tbody>
                }
                }

        </table>
    </div>