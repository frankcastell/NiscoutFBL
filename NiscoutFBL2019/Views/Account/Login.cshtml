@using NiscoutFBL2019.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
}
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Iniciar Sesión</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Content/assets/images/Logov2.png" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_v1/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_v1/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_v1/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_v1/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_v1/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_v1/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Login_v1/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div>
                <img class="Imagen"  src="~/Login_v1/images/3.jpg" alt="IMG" >
            </div>
            <div class="wrap-login100">
                <div class="header-w3l">
                    <h1>
                        Asociación
                                 De Scouts
                        De Nicaragua

                        @ViewBag.falla
                    </h1>
                </div>
                <div class="login100-pic js-tilt" data-tilt>

                    <img src="~/Login_v1/images/1.png" alt="IMG" style="width: 80%; height: 80%;margin-top:30px;">                  
                </div>                
                <section id="loginForm"style="margin-right:-8px;
                                               margin-top:-1px;
                                               margin-left:-5px;
                                              border-color: #be51c1;
                                              border-width: 1px;
                                              padding-left:10px;
                                             
                                              padding-bottom: 10px;
                                              border-style: solid;
                                              -webkit-border-radius: 7px">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                        @Html.AntiForgeryToken()
                        <span class="login100-form-title">
                            Iniciar Sesión
                        </span>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                            <div class="col-md-12">
                                @Html.TextBoxFor(m => m.Email, new { @class = "input100" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                <span class="focus-input100"></span>
                                <span class="symbol-input100">
                                    <i class="fa fa-envelope" aria-hidden="true"></i>
                                </span>
                            </div>
                        </div>
                        <div class="wrap-input100 validate-input" data-validate="Password is required">
                            <div class="col-md-12">
                                @Html.PasswordFor(m => m.Password, new { @class = "input100" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                <span class="symbol-input100">
                                    <i class="fa fa-lock" aria-hidden="true"></i>
                                </span>
                            </div>
                        </div>
                        <div class="text-center p-t-12">
                            
                            <a class="txt2" href="#">
                                <p>
                                    @Html.ActionLink("¿Ha olvidado su contraseña?", "ForgotPassword")
                                </p>
                            </a>
                        </div>

                        <div class="container-login100-form-btn">
                            <button type="submit" value="Iniciar sesión" class="login100-form-btn">
                                Iniciar
                            </button>
                        </div>
                        

                        <div class="container-fluid" style="margin-top:15px;margin-left:10px;">        
                            <p class="text-center p-t-12">
                                Crear Cuenta!!
                            </p>                            
                            <a href="@Url.Action("Solicitud","Adultoes")"style="padding: .30rem .5rem;font-size: .920rem;margin-right:15px;" class="btn btn-success btn-sm"title="Registrar"> Miembro Adulto</a>
                            <a href="@Url.Action("solicitudtutor", "Personas")"style="padding: .30rem .6rem;font-size: .920rem;margin-right:8px;" class="btn btn btn-success btn-sm"title="Registar"> Registro de  Tutor</a>
                                </div>
                       
                    }
                </section>
            </div>
        </div>


    </div>



    <!--===============================================================================================-->
    <script src="~/Login_v1/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Login_v1/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Login_v1/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Login_v1/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Login_v1/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
		$('.js-tilt').tilt({
			scale: 1.1
		})
    </script>
    <!--===============================================================================================-->
    <script src="~/Login_v1/js/main.js"></script>

</body>
</html>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}