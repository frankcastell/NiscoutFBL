@model IEnumerable<NiscoutFBL2019.Models.Local_Evento>

@{
    ViewBag.Title = "Index";
}


<div class="card-header card-header-tabs" style="box-shadow: 0 0 1px 0 ; background-color: transparent">
    <h3 style="font-family:'Times New Roman'"><strong> @Model.Count() Registros de Local de Eventos  </strong>  </h3>

</div>
<br />
<div align="left">
    @using (Html.BeginForm("Index", "Local_Evento", FormMethod.Get))
    {
        <div align="right">
            <div>
              

                @Html.TextBox("buscar")
                <input type="image" src="@Url.Content("~/Content/Ico/lupa.png")" width="20" class="btn waves-effect waves-light btn-outline-info">

                <a href="@Url.Action("Create", "Local_Evento")" class="btn waves-effect waves-light btn-outline-info hidden-md-down" title="Registrar un Local de evento">
                    Nuevo <img width="25" src="@Url.Content("~/Content/Ico/Nuevo.png")" />
                </a>
                @*<a href="@Url.Action("RepAdulto", "Adultoes")" class="btn waves-effect waves-light btn-outline-success hidden-md-down" title="Imprimir Registros">
                        <img width="25" src="@Url.Content("~/Content/Ico/imprimir.png")" />
                    </a>*@

                <hr />
            </div>
        </div>
    }
</div>

<div class="col-lg-12 " style="box-shadow: 0px 1px 3px mediumpurple">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table vm no-th-brd no-wrap pro-of-month">
                    <thead style="color: #000">
                        <tr>
                            <th>
                               Nombre
                            </th>
                            <th>
                               Direccion
                            </th>
                            <th>
                               Telefono
                            </th>
                            <th>
                               Correo
                            </th>
                            <th> Accion</th>
                        </tr>
                    </thead>
                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td>
                                <div colspan="4" style="font-family:'Times New Roman'; color:purple; font-size:18px">
                                    <br /> No se ha encontrado ningún dato relacionado
                                    <a href="@Url.Action("Index")" class="btn waves-effect " title="Volver">
                                        <img width="30" src="@Url.Content("~/Content/Ico/Volver.png")" />
                                    </a>

                                </div>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr class="alt">
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Direccion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Telefono)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.E_Mail)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", "Local_Evento", new { id = item.Id })" class="btn waves-effect waves-light btn-outline-primary hidden-md-down" title="Editar Registro">
                                        <img width="25" src="~/Content/Ico/Editar.png" />
                                    </a>
                                    <a href="@Url.Action("Details", "Local_Evento", new { id = item.Id })" class="btn waves-effect waves-light btn-outline-info hidden-md-down" title="Información">
                                        <img width="25" src="~/Content/Ico/Ver_detalles.png" />
                                    </a>
                                    @*<a href="@Url.Action("Delete", "Local_Evento", new { id = item.Id })" class="btn waves-effect waves-light btn-outline-danger  hidden-md-down" title="Eliminar Registro">
                                        <img width="25" src="~/Content/Ico/eliminar.png" />
                                        </a>*@
                                </td>
                            </tr>
                        }
                    }

                </table>
            </div>
        </div>
    </div>
</div>
