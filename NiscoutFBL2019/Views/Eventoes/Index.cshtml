@model IEnumerable<NiscoutFBL2019.Models.Evento>

@{
    ViewBag.Title = "Index";
}

<h2>Registros de Evento</h2>
<link href="~/Content/css/ButtonStyles.css" rel="stylesheet" />

<div align="left">
    @using (Html.BeginForm("Index", "Eventoes", FormMethod.Get))
    {
       
        <div align="right">
            <div>
                <hr />

                @Html.TextBox("buscar")
                <input type="image" src="@Url.Content("~/Content/Ico/lupa.png")" width="20" class="btn waves-effect waves-light btn-outline-info">

                <a href="@Url.Action("Create", "Eventoes")" class="btn waves-effect waves-light btn-outline-info hidden-md-down" title="Registrar un nuevo Evento">
                    Nuevo <img width="25" src="@Url.Content("~/Content/Ico/Nuevo.png")" />
                </a>
                <a href="@Url.Action("RepAdulto", "Adultoes")" class="btn waves-effect waves-light btn-outline-success hidden-md-down" title="Imprimir Registros">
                    <img width="25" src="@Url.Content("~/Content/Ico/imprimir.png")" />
                </a>

                <hr />
            </div>
        </div>
    }
</div>


<div class="datagrid">
    <table class="table vm no-th-brd no-wrap pro-of-month">
        <thead>
            <tr>
                <th>
                    Codigo
                </th>
                <th>
                   Evento
                </th>
                <th>
                   Descripción
                </th>
                <th>
                    Hora
                </th>
                <th>
                    Fecha
                </th>
                <th>
                    Unidades
                </th>
                <th></th>
            </tr>
        </thead>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4"> No se ha encontrado ningún dato relacionado</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cod_Evento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre_Evento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hora)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubGrupo.Nombre_Subgrupo)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Eventoes",new { id = item.Id })" class="btn waves-effect waves-light btn-outline-primary hidden-md-down" title="Editar Registro">
                        <img width="25" src="~/Content/Ico/Editar.png" />
                    </a>
                    <a href="@Url.Action("Details", "Eventoes",new { id = item.Id })" class="btn waves-effect waves-light btn-outline-info hidden-md-down" title="Información">
                        <img width="25" src="~/Content/Ico/Ver_detalles.png" />
                    </a>
                    <a href="@Url.Action("Delete", "Eventoes",new { id = item.Id })" class="btn waves-effect waves-light btn-outline-danger  hidden-md-down" title="Eliminar Registro">
                        <img width="25" src="~/Content/Ico/eliminar.png" />
                    </a>
                </td>
            </tr>
            }
        }
    </table>
</div>