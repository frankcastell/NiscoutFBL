@model IEnumerable<NiscoutFBL2019.Models.Distrito>

@{
    ViewBag.Title = "Index";
}

<h2>Registro de Distritos</h2>
<link href="~/Content/css/ButtonStyles.css" rel="stylesheet" />

<div align="left">
    @using (Html.BeginForm("Index", "Distritoes", FormMethod.Get))
    {
        <div align="right">
            <div>
                <hr />
                @Html.ActionLink("Imprimir", "reportePDF", "PDF")
                @Html.TextBox("buscar")
                <input type="image" src="@Url.Content("~/Content/Ico/lupa.png")" width="20" class="btn waves-effect waves-light btn-outline-info" title="Buscar Registro">

                <a href="@Url.Action("Create", "Distritoes")" class="btn waves-effect waves-light btn-outline-info hidden-md-down" title="Registrar un Adulto">
                    Nuevo <img width="25" src="@Url.Content("~/Content/Ico/Nuevo.png")" />
                </a>
                @*<a href="@Url.Action("RepAdulto", "Adultoes")" class="btn waves-effect waves-light btn-outline-success hidden-md-down" title="Imprimir Registros">
                    <img width="25" src="@Url.Content("~/Content/Ico/imprimir.png")" />
                </a>*@

                <hr />
            </div>
        </div>

    }
</div>

<div class="datagr">
    <table >
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Cod_Distrito)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre_Distrito)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th></th>
            </tr>
            </thead>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="4"> No se ha encontrado ningún dato relacionado</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                <tr class="alt">
                    <td>
                        @Html.DisplayFor(modelItem => item.Cod_Distrito)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre_Distrito)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Distritoes",new { id = item.Id })" class="btn waves-effect waves-light btn-outline-primary hidden-md-down" title="Editar Registro">
                            <img width="25" src="~/Content/Ico/Editar.png" />
                        </a>
                        <a href="@Url.Action("Details", "Distritoes",new { id = item.Id })" class="btn waves-effect waves-light btn-outline-info hidden-md-down" title="Información">
                            <img width="25" src="~/Content/Ico/Ver_detalles.png" />
                        </a>
                        <a href="@Url.Action("Delete", "Distritoes",new { id = item.Id })" class="btn waves-effect waves-light btn-outline-danger  hidden-md-down" title="Eliminar Registro">
                            <img width="25" src="~/Content/Ico/eliminar.png" />
                        </a>
                        
                    </td>
                </tr>
                }
            }

    </table>
    </div>