@model IEnumerable<NiscoutFBL2019.Models.Grupo>

@{
    ViewBag.Title = "Index";
}

<h2>Registro de Grupos</h2>
<link href="~/Content/css/ButtonStyles.css" rel="stylesheet" />

<div align="left">
    @using (Html.BeginForm("Index", "Grupoes", FormMethod.Get))
    {
        <div align="right">

            <div>
                <hr />

                @Html.TextBox("buscar")
                <input type="image" src="@Url.Content("~/Content/Ico/lupa.png")" width="20" class="btn waves-effect waves-light btn-outline-info">

                <a href="@Url.Action("Create", "Grupoes")" class="btn waves-effect waves-light btn-outline-info hidden-md-down" title="Registrar un Adulto">
                    Nuevo <img width="25" src="@Url.Content("~/Content/Ico/Nuevo.png")" />
                </a>
                <a href="@Url.Action("RepAdulto", "Grupoes")" class="btn waves-effect waves-light btn-outline-success hidden-md-down" title="Imprimir Registros">
                    <img width="25" src="@Url.Content("~/Content/Ico/imprimir.png")" />
                </a>

                <hr />
            </div>
        </div>
    }
</div>

<div class="datagrid">
    <table class="table vm no-th-brd no-wrap pro-of-month">
        <thead>
            <tr>
                <th>
                    Codigo Grupo
                </th>
                <th>
                    Nombre Grupo
                </th>
                <th>
                    Numero de Solicitud
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pañoleta)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Insignia)
                </th>
                <th>
                    Sello
                </th>
                <th>
                    Carta Solicitud
                </th>
                <th>
                    Responsable
                </th>
                <th>
                    Distritos
                </th>
                <th></th>
            </tr>
        </thead>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4"> No se ha encontrado ningún dato relacionado</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cod_Grupo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre_Grupo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Num_Solicitud)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pañoleta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Insignia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sello_Grupo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Carta_Solicitud)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Responsable.Nombres)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Distrito.Nombre_Distrito)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Grupoes",new { id = item.Id })" class="btn waves-effect waves-light btn-outline-primary hidden-md-down" title="Editar Registro">
                            <img width="25" src="~/Content/Ico/Editar.png" />
                        </a>
                        <a href="@Url.Action("Details", "Grupoes",new { id = item.Id })" class="btn waves-effect waves-light btn-outline-info hidden-md-down" title="Información">
                            <img width="25" src="~/Content/Ico/Ver_detalles.png" />
                        </a>
                        <a href="@Url.Action("Delete", "Grupoes",new { id = item.Id })" class="btn waves-effect waves-light btn-outline-danger  hidden-md-down" title="Eliminar Registro">
                            <img width="25" src="~/Content/Ico/eliminar.png" />
                        </a>
                    </td>
                </tr>
            }
        }
    </table>
</div>

