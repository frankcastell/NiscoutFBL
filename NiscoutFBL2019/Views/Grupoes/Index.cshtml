@model IEnumerable<NiscoutFBL2019.Models.Grupo>

@{
    ViewBag.Title = "Index";
}

<h2>Registro de Grupos</h2>
<link href="~/Content/css/ButtonStyles.css" rel="stylesheet" />

<div align="left">
    @using (Html.BeginForm("Index", "Grupoes", FormMethod.Get))
    {
        <div align="right">
            <hr />
            <a href="@Url.Action("Create", "Grupoes")" class="btn waves-effect waves-light btn-outline-info hidden-md-down"> Agregar Nuevo Grupo</a>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

            @Html.TextBox("buscar")
            &nbsp;&nbsp;&nbsp;
            <input type="submit" value="Buscar" class="btn btn-outline-success" />
            <hr />
        </div>
    }
</div>

<div class="datagrid">
    <table  class="table vm no-th-brd no-wrap pro-of-month">
        <thead>
            <tr>
                <th>
                   Codigo Grupo
                </th>
                <th>
                    Nombre Grupo
                </th>
                <th>
                    Numero de Solicitud
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pañoleta)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Insignia)
                </th>
                <th>
                    Sello
                </th>
                <th>
                   Carta Solicitud
                </th>
                <th>
                    Responsable
                </th>
                <th>
                   Distritos
                </th>
                <th></th>
            </tr>
        </thead>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4"> No se ha encontrado ningún dato relacionado</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cod_Grupo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre_Grupo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Num_Solicitud)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pañoleta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Insignia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sello_Grupo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Carta_Solicitud)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Responsable.Nombres )
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Distrito.Nombre_Distrito )
                </td>
                <td>
                    <button class="btn waves-effect waves-purple btn-success hidden-md-down">@Html.ActionLink("Editar", "Edit", new { id = item.Id })</button>
                    <button class="btn waves-effect waves-red btn-info hidden-md-down">@Html.ActionLink("Detalles", "Details", new { id = item.Id })</button>
                    <button class="btn waves-effect waves-light btn-danger hidden-md-down">@Html.ActionLink("Eliminar", "Delete", new { id = item.Id })</button>
                </td>
            </tr>
        }
        }
    </table>
</div>