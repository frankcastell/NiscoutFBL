@model IEnumerable<NiscoutFBL2019.Models.Departamento>

@{
    ViewBag.Title = "Index";
}

<p>
    <a href="@Url.Action("Create", "Departamentoes")" class="btn waves-effect waves-light btn-outline-info hidden-md-down"> Registrar Nuevo Departamento</a>
</p>

@using (Html.BeginForm("Index", "Departamentoes", FormMethod.Get))
{
       
       @Html.TextBox("searching", "", new { @class = "form-control" })
      <input type="submit" value="Buscar" class="btn btn-outline-success"/>
   
}
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Cod_Departamento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre_Departamento)
                </th>
                <th></th>
            </tr>

            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="4"> No se ha encontrado ningún dato relacionado</td>
                </tr>
            }
            else
            {
               
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cod_Departamento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre_Departamento)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            }
           

        </table>



