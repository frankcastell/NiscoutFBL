@model IEnumerable<NiscoutFBL2019.Models.Departamento>

@{
    ViewBag.Title = "Index";
}
<h2>Registros de Departamentos</h2>
<div align="left">
    @using (Html.BeginForm("Index", "Departamentoes", FormMethod.Get))
    {
        <div align="right">
            <hr />
            <a href="@Url.Action("Create", "Departamentoes")" class="btn waves-effect waves-light btn-outline-info hidden-md-down"> Registrar Nuevo Departamento</a>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;

            @Html.TextBox("searching")
            &nbsp; &nbsp; &nbsp; 
            <input type="submit" value="Buscar" class="btn btn-outline-success" />
            <hr />
        </div>
    }
</div>
<div class="datagr">
    <table >
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Cod_Departamento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre_Departamento)
                </th>
                <th></th>
            </tr>
        </thead>
        @if (Model.Count() == 0)
            {
            <tr>
                <td colspan="4"> No se ha encontrado ningún dato relacionado</td>
            </tr>
        }
        else
        {

            foreach (var item in Model)
            {
                <tr class="alt">
                    <td>
                        @Html.DisplayFor(modelItem => item.Cod_Departamento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre_Departamento)
                    </td>
                    
                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.Id })*@
                        <button class="btn waves-effect waves-purple btn-success hidden-md-down">@Html.ActionLink("Editar", "Edit", new { id = item.Id })</button>
                        <button class="btn waves-effect waves-red btn-info hidden-md-down">@Html.ActionLink("Detalles", "Details", new { id = item.Id })</button>
                        <button class="btn waves-effect waves-light btn-danger hidden-md-down">@Html.ActionLink("Eliminar", "Delete", new { id = item.Id })</button>
                    </td>
                   
                </tr>
            }
        }
    </table>
    </div>



