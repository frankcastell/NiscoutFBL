@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Add Role";
}
<table style=" background-color:#FFFFFF; dashed 3px #6D7B8D; padding 5px;width 99%;table-layout:fixed;" cellpadding="6" cellspacing="6">
    <tr style="height: 30px; background-color:#336699 ; color:#FFFFFF ;border: solid 1px #659EC7;">
        <td align="center" colspan="2">
            <h2> Lista de Roles</h2>
        </td>

    </tr>
    <tr>
        <td>
            <table class="table vm no-th-brd no-wrap pro-of-month" style="width:100%; border:dotted 1px; background-color:gainsboro; padding-left:10px;">

                @foreach (var item in Model)
                {
                    <tr>
                        <td style="width:100%; border:dotted 1px;">
                            @item.Name
                        </td>
                    </tr>}
            </table>
        </td>
        <td align="right" style="color:#FFFFFF;padding-right:10;">


            <a href="@Url.Action( "Create", "Roles")" class="btn waves-effect waves-purple btn btn-outline-danger hidden-md-down" title="Nuevo Rol"> Nuevo Rol </a>
        </td>
    </tr>
</table> 
