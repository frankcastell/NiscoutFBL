@model IEnumerable<NiscoutFBL2019.Models.Cargo>

@{
    ViewBag.Title = "Index";
}

<h2>Registros de Periodos</h2>
<link href="~/Content/css/ButtonStyles.css" rel="stylesheet" />
<p>
    <a href="@Url.Action("Create","Cargoes")" class="btn waves-effect waves-light btn-outline-info hidden-md-down"> Agregar Nuevo Cargo</a>
</p>
<div class="datagr">
    <table>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Cod_Cargo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre_Cargo)
                </th>
                <th></th>
            </tr>
        </thead>
        @foreach (var item in Model)
            {
            <tbody>
                <tr class="alt">
                    <td>
                        @Html.DisplayFor(modelItem => item.Cod_Cargo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre_Cargo)
                    </td>
                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.Id })*@
                        <button class="btn waves-effect waves-purple btn-success hidden-md-down">@Html.ActionLink("Editar", "Edit", new { id = item.Id })</button>
                        <button class="btn waves-effect waves-red btn-info hidden-md-down">@Html.ActionLink("Detalles", "Details", new { id = item.Id })</button>
                        <button class="btn waves-effect waves-light btn-danger hidden-md-down">@Html.ActionLink("Eliminar", "Delete", new { id = item.Id })</button>
                    </td>
                </tr>
            </tbody>
        }

    </table>

</div>
