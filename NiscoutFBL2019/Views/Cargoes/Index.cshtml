@model IEnumerable<NiscoutFBL2019.Models.Cargo>

@{
    ViewBag.Title = "Index";
}

<style>
    .login100-form-title {
        font-weight: bold;
        font-family: Poppins-Bold;
        font-size: 30px;
        color: #333333;
        line-height: 1.2;
        text-align: center;
        width: 100%;
    }

    .input100 {
        border: none;
        font-family: Poppins-Medium;
        font-size: 20px;
        line-height: 1.5;
        color: #333333;
        display: block;
        width: 100%;
        background: #e6e6e6;
        height: 45px;
        border-radius: 15px;
        padding: 0 20px 0 53px;
    }


    .form-group {
        position: relative;
        width: 95%;
        z-index: 1;
        margin-bottom: 10px;
    }

    .control-label {
        font-weight: bold;
        color: #333333;
        font-size: 18px;
    }
</style>
<div class="card-header card-header-tabs" style="box-shadow: 0 0 5px 0 mediumpurple; background-color: transparent">
    <span align="center" class="login100-form-title">
        Registros de Cargos
    </span>
</div>
<link href="~/Content/css/ButtonStyles.css" rel="stylesheet" />
<div align="left">
    @using (Html.BeginForm("Index", "Cargoes", FormMethod.Get))
    {

        <div align="right">
            <div>
                <hr />

                @Html.TextBox("buscar")
                <input type="image" src="@Url.Content("~/Content/Ico/lupa.png")" width="20" class="btn waves-effect waves-light btn-outline-info" title="Buscar Registro">

                <a href="@Url.Action("Create", "Cargoes")" class="btn waves-effect waves-light btn-outline-info hidden-md-down" title="Registrar un Adulto">
                    Nuevo <img width="25" src="@Url.Content("~/Content/Ico/Nuevo.png")" />
                </a>
                <a href="@Url.Action("RepAdulto", "Adultoes")" class="btn waves-effect waves-light btn-outline-success hidden-md-down" title="Imprimir Registros">
                    <img width="25" src="@Url.Content("~/Content/Ico/imprimir.png")" />
                </a>

                <hr />
            </div>
        </div>

    }
</div>


<div class="col-lg-12 " style="box-shadow: 0px 1px 3px mediumpurple">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table vm no-th-brd no-wrap pro-of-month">
                    <thead>
                        <tr>
                            <th>
                               Codigo:
                            </th>
                            <th>
                               Nombre del Cargo
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="4"> No se ha encontrado ningún dato relacionado</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tbody>
                                <tr class="alt">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cod_Cargo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre_Cargo)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", "Cargoes",new { id = item.Id })" class="btn waves-effect waves-light btn-outline-primary hidden-md-down" title="Editar Registro">
                                            <img width="25" src="~/Content/Ico/Editar.png" />
                                        </a>
                                        <a href="@Url.Action("Details", "Cargoes",new { id = item.Id })" class="btn waves-effect waves-light btn-outline-info hidden-md-down" title="Información">
                                            <img width="25" src="~/Content/Ico/Ver_detalles.png" />
                                        </a>
                                        <a href="@Url.Action("Delete", "Cargoes",new { id = item.Id })" class="btn waves-effect waves-light btn-outline-danger  hidden-md-down" title="Eliminar Registro">
                                            <img width="25" src="~/Content/Ico/eliminar.png" />
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        }
                    }

                </table>

            </div>
        </div>
    </div>
</div>

