                        @Html.DisplayFor(modelItem => item.Annio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Etapa_Aprobacion.Cod_Etapa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Adulto.Cod_Persona)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

    </table>
    </div>

