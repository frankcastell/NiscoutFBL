@model IEnumerable<NiscoutFBL2019.Models.Membresia_Adulto>

@{
    ViewBag.Title = "Index";
}

<h2>Registros de Membresia Adulto</h2>

<div align="left">
    @using (Html.BeginForm("Index", "Membresia_Adulto", FormMethod.Get))
            {
        <div align="right">
            <hr />
            <a href="@Url.Action("Create", "Membresia_Adulto")" class="btn waves-effect waves-light btn-outline-info hidden-md-down"> Agregar Membresia Adulto</a>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

            @Html.TextBox("buscar")
            &nbsp;&nbsp;&nbsp;&nbsp;
            <input type="submit" value="Buscar" class="btn btn-outline-success" />
            <hr />
        </div>
    }
</div>


<div class="datagrid">
    <table class="table vm no-th-brd no-wrap pro-of-month">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Adulto.Nombres)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Etapa_Aprobacion1.Cod_Etapa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Carta_Compromiso)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Carta_Intencion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Record_Policia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Carta_Ref_Personal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Certifi_Salvo_Peligro)
                </th>
                <th></th>
            </tr>
            </thead>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="8"> No se ha encontrado ningún dato relacionado</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Adulto.Nombres)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Etapa_Aprobacion1.Cod_Etapa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Carta_Compromiso)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Carta_Intencion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Record_Policia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Carta_Ref_Personal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Certifi_Salvo_Peligro)
                    </td>
                    <td>
                        <button class="btn waves-effect waves-purple btn-primary hidden-md-down">@Html.ActionLink("Renovar", "Create", new { id = item.Id })</button>

                        <button class="btn waves-effect waves-purple btn-success hidden-md-down">@Html.ActionLink("Editar", "Edit", new { id = item.Id })</button>
                        <button class="btn waves-effect waves-red btn-info hidden-md-down">@Html.ActionLink("Detalles", "Details", new { id = item.Id })</button>
                        <button class="btn waves-effect waves-light btn-danger hidden-md-down">@Html.ActionLink("Eliminar", "Delete", new { id = item.Id })</button>
                    </td>
                </tr>
                }
            }
    </table>
    </div>
