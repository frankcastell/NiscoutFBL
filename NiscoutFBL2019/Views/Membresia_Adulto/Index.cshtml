@model IEnumerable<NiscoutFBL2019.Models.Membresia_Adulto>

@{
    ViewBag.Title = "Index";
}
<div class="card-header card-header-tabs" style="box-shadow: 0 0 1px 0 ; background-color: transparent">
    <h3 style="font-family:'Times New Roman'"><strong> @Model.Count() Registros de Membresías Adultos  </strong>  </h3>
    <h4 style="font-family:'Times New Roman'"> @Model.Count(x => x.Adulto.Sexo == "Femenino") Mujeres | @Model.Count(x => x.Adulto.Sexo == "Masculino")  Hombres</h4>
</div>

<div align="left">
    @using (Html.BeginForm("Index", "Membresia_Adulto", FormMethod.Get))
            {
        <div align="right">
            <br />

            @Html.TextBox("buscar")
            <input type="image" src="@Url.Content("~/Content/Ico/lupa.png")" width="20" class="btn waves-effect waves-light btn-outline-info">

            <a href="@Url.Action("Create", "Adultoes")" class="btn waves-effect waves-light btn-outline-info hidden-md-down" title="Registrar un Miembro">
                Nuevo <img width="25" src="@Url.Content("~/Content/Ico/Nuevo.png")" />
            </a>
            <a href="@Url.Action("RepAdulto", "Membresia_Adulto")" target="_blank" class="btn waves-effect waves-light btn-outline-success hidden-md-down" title="Imprimir Registros">
                <img width="25" src="@Url.Content("~/Content/Ico/imprimir.png")" />
            </a>
            <hr />
        </div>
    }
</div>

<div class="col-lg-12 " style="box-shadow: 0px 1px 3px mediumpurple">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table vm no-th-brd no-wrap pro-of-month">
                    <thead style="color: #000">
                        <tr>
                            <th>
                                Unidad
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Adulto.Nombres)
                            </th>
                            <th>
                               Año
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cargo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Etapa_Aprobacion.Estado)
                            </th>                          
                           
                            <th></th>
                        </tr>
                    </thead>
                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td>
                                <div colspan="4" style="font-family:'Times New Roman'; color:purple; font-size:18px">
                                    <br /> No se ha encontrado ningún dato relacionado
                                    <a href="@Url.Action("Index")" class="btn waves-effect " title="Volver">
                                        <img width="30" src="@Url.Content("~/Content/Ico/Volver.png")" />
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tbody>
                                <tr>
                                    <td>
                                        Nombre Subgrupo
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Adulto.Nombres)
                                    </td>
                                    
                                    <td>
                                        Año:
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cargo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Etapa_Aprobacion.Estado)
                                    </td>
                                    
                                    <td>
                                        <a href="@Url.Action("Edit", "Membresia_Adulto",new { id = item.Id })" class="btn waves-effect waves-light btn-outline-primary hidden-md-down" title="Editar Registro">
                                            <img width="25" src="~/Content/Ico/Editar.png" />
                                        </a>
                                        <a href="@Url.Action("Details", "Membresia_Adulto",new { id = item.Id })" target="_blank" class="btn waves-effect waves-light btn-outline-info hidden-md-down" title="Información">
                                            <img width="25" src="~/Content/Ico/Ver_detalles.png" />
                                        </a>
                                        <a href="@Url.Action("ReporCarnetAdmin", "Reportes", new { id = item.Id })" target="_blank" class="btn waves-effect waves-light btn-outline-success hidden-md-down" title="Imprimir Carnet">
                                            <img width="25" src="@Url.Content("~/Content/Ico/imprimir.png")" />
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        }
                    }
                </table>
            </div>
        </div>
    </div>
</div>
