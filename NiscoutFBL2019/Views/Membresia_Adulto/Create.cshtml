@model NiscoutFBL2019.Models.Membresia_Adulto


@{
    ViewBag.Title = "MembresiaAdulto";
    NiscoutFBL2019.Models.Adulto Adulto = ViewBag.Adulto;
}
<style>
    .login100-form-title {
        font-weight: bold;
        font-family: Poppins-Bold;
        font-size: 30px;
        color: #333333;
        line-height: 1.2;
        text-align: center;
        width: 100%;
    }
    .input100 {
        border: none;
        font-family: Poppins-Medium;
        font-size: 20px;
        line-height: 1.5;
        color: #333333;
        display: block;
        width: 100%;
        background: #e6e6e6;
        height: 45px;
        border-radius: 15px;
        padding: 0 20px 0 53px;
    }
    .form-group {
        position: relative;
        width: 95%;
        z-index: 1;
        margin-bottom: 10px;
    }
    .control-label {
        font-weight: bold;
        color: #333333;
        font-size: 18px;
    }
</style>
<div class="card-header card-header-tabs" style="box-shadow: 0 0 1px 0 ; background-color: transparent">
    <h2 style="font-family:'Times New Roman'"><strong> Paso #2 Datos de Unidades... </strong>  </h2>
</div>

<br />
@using (Html.BeginForm("Create", "Membresia_Adulto", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="col-lg-12 " style="box-shadow: 0 0 5px 0">
        <div class="card">
            <div class="card-body">

                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group" style="display:inline-block; ">
                    @Html.LabelFor(model => model.AdultoId, "Adulto:", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10" style="float: right; ">                       
                        <h2 class="form-control">
                            <input class="input100" type="hidden" id="AdultoId" name="AdultoId" value="@Adulto.Id" />
                            <label><strong> @Adulto.Nombres @Adulto.Apellidos</strong> </label>
                        </h2>
                    </div>
                </div>

                <div class="form-group" style="display:inline-block;  ">
                    @Html.LabelFor(model => model.Carta_Compromiso, "Carta Compromiso:", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10" style="float: right; ">
                        <input type="file" accept=".pdf" name="image1" width="25" class="btn waves-effect waves-light btn-outline-info" />
                    </div>
                </div>

                <div class="form-group" style="display:inline-block; ">
                    @Html.LabelFor(model => model.Carta_Intencion,"Carta Intención:", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10" style="float: right; ">
                        <input type="file" accept=".pdf" name="image2" class="btn waves-effect waves-light btn-outline-info" />
                    </div>
                </div>

                <div class="form-group" style="display:inline-block; ">
                    @Html.LabelFor(model => model.Record_Policia,"Récord Policial:", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10" style="float: right;">
                        <input type="file" accept=".pdf" name="image3" class="btn waves-effect waves-light btn-outline-info" />
                    </div>
                </div>

                <div class="form-group" style="display:inline-block; ">
                    @Html.LabelFor(model => model.Carta_Ref_Personal,"Ref. Personal:", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10" style="float: right;">
                        <input type="file" accept=".pdf" name="image4" class="btn waves-effect waves-light btn-outline-info" />
                    </div>
                </div>

                <div class="form-group" style="display:inline-block; ">
                    @Html.LabelFor(model => model.Certifi_Salvo_Peligro,"Certificado Peligro:", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10" style="float: right; ">
                        <input type="file" accept=".pdf" name="image5" class="btn waves-effect waves-light btn-outline-info" />
                    </div>
                </div>

                <div class="form-group" style="display:inline-block; ">
                    @Html.LabelFor(model => model.Annio, "Año:", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10" style="float: right; ">
                        @Html.EditorFor(model => model.Annio, new { htmlAttributes = new { @class = "input100" } })
                        @Html.ValidationMessageFor(model => model.Annio, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="display:inline-block; ">
                    @Html.LabelFor(model => model.Etapa_AprobacionId, "Etapa Aprobación:", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10" style="float: right; ">                       
                         <input class="input100" type="hidden" id="Etapa_AprobacionId" name="Etapa_AprobacionId" value="2" />
                    </div>
                </div>

                @* CARGO*@
                <div class="form-group" style="display:inline-block; ">
                    @Html.LabelFor(model => model.Cargo, "Cargo:", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10" style="float: right;  ">
                        @Html.DropDownList("Cargo", null, "--- Seleccione Cargo---", htmlAttributes: new { @class = "input100" })
                        @Html.ValidationMessageFor(model => model.Cargo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="display:inline-block; ">
                    @Html.LabelFor(model => model.SubGrupoId, "SubGrupo:", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10" style="float: right; ">
                        @Html.DropDownList("SubGrupoId", null, "--- Seleccione SubGrupo---", htmlAttributes: new { @class = "input100" })
                        @Html.ValidationMessageFor(model => model.SubGrupoId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div align="right">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input src="@Url.Content("~/Content/Ico/guardar.png")" type="image" value="Guardar" width="25" class="btn waves-effect waves-light btn-outline-info" title="Guardar Registro de Membresía" /> &nbsp;

                            <a href="@Url.Action("Index")" class="btn waves-effect waves-purple btn btn-outline-red" title="Cancelar Registro">
                                <img width="30" src="@Url.Content("~/Content/Ico/cancelar.png")" />
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>    
}
